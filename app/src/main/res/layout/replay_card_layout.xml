<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:weightSum="2"
            android:background="#13a8de">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/replay_image"
                android:layout_height="match_parent"
                android:src="@drawable/cam3"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/replay_textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_replay"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:text="Replay Lap 11"
                android:textSize="20dp"
                android:textStyle="bold|italic|normal" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>